{
  "name": "electron-app",
  "version": "1.0.0",
  "description": "Electron 30 app with Tailwind CSS and DaisyUI",
  "main": "main.js",
  "scripts": {
    "start": "npm run build:tailwind && electron .",
    "build:tailwind": "tailwindcss -i ./src/styles.css -o ./src/output.css",
    "watch:tailwind": "tailwindcss -i ./src/styles.css -o ./src/output.css --watch"
  },
  "keywords": [
    "electron",
    "tailwindcss",
    "daisyui"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^30.0.0",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "daisyui": "^4.0.0"
  }
}
